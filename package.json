{
  "name": "onigiribot",
  "version": "1.0.0",
  "description": "An open source, lightweight, do-it-all Discord bot with a web UI!",
  "main": "index.js",
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc",
    "dev": "nodemon --watch 'src/**/*.ts' --exec ts-node src/index.ts",
    "deploy-commands": "ts-node src/utils/deploy-commands.ts",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeke-code/OnigiriBot.git"
  },
  "author": "zeke-code",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/zeke-code/OnigiriBot/issues"
  },
  "homepage": "https://github.com/zeke-code/OnigiriBot#readme",
  "dependencies": {
    "@discordjs/voice": "^0.18.0",
    "axios": "^1.13.2",
    "bgutils-js": "^3.2.0",
    "discord.js": "^14.24.2",
    "dotenv": "^17.2.3",
    "pg": "^8.16.3",
    "shoukaku": "^4.2.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@prisma/client": "^6.19.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "ts-node": "^10.9.2"
  }
}
