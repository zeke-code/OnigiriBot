{
  "name": "onigiribot",
  "version": "1.0.0",
  "description": "An open source, lightweight, do-it-all Discord bot with a web UI!",
  "main": "index.js",
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc",
    "dev": "nodemon --watch 'src/**/*.ts' --exec ts-node src/index.ts",
    "deploy-commands": "ts-node src/utils/deploy-commands.ts",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeke-code/OnigiriBot.git"
  },
  "author": "zeke-code",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/zeke-code/OnigiriBot/issues"
  },
  "homepage": "https://github.com/zeke-code/OnigiriBot#readme",
  "dependencies": {
    "@discord-player/extractor": "^7.1.0",
    "@discordjs/voice": "^0.18.0",
    "axios": "^1.11.0",
    "bgutils-js": "^3.2.0",
    "discord-player": "^7.1.0",
    "discord-player-youtubei": "^1.5.0",
    "discord.js": "^14.21.0",
    "dotenv": "^17.0.0",
    "pg": "^8.16.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@prisma/client": "^6.12.0",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.15.4",
    "nodemon": "^3.1.10",
    "prisma": "^6.12.0",
    "ts-node": "^10.9.2"
  }
}
